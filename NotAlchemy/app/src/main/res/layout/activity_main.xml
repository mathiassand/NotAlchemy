<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.larsnielsen.notalchemy.MainActivity">

    <TableLayout
        android:layout_width="374dp"
        android:layout_height="361dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="16dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageButton
                android:id="@+id/airButton"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:onClick="buttonPress"
                android:background="@mipmap/air"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/earthButton"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:onClick="buttonPress"
                android:background="@mipmap/earth"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/fireButton"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:background="@mipmap/fire"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground"
                android:onClick="buttonPress"/>

            <ImageButton
                android:id="@+id/waterButton"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:background="@mipmap/water"
                android:onClick="buttonPress"
                android:src="?android:selectableItemBackground"
                app:srcCompat="@android:color/transparent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/steamButton"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:background="@mipmap/steam"
                android:onClick="buttonPress"
                android:src="?android:selectableItemBackground"
                android:visibility="gone"
                app:srcCompat="@android:color/transparent" />

            <ImageButton
                android:id="@+id/imageButton12"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="67dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@android:color/transparent"
                android:src="?android:selectableItemBackground" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="combineButton"
        android:text="Combine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.702" />


</android.support.constraint.ConstraintLayout>
